// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.234.0/containers/ubuntu
{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Ubuntu version: jammy / ubuntu-22.04, focal / ubuntu-20.04, bionic /ubuntu-18.04
		// Use ubuntu-22.04 or ubuntu-18.04 on local arm64/Apple Silicon.
		"args": { "VARIANT": "ubuntu-18.04" }
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {},


	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.js-debug",
		"ms-python.python",
		"dbaeumer.vscode-eslint",
		"stylelint.vscode-stylelint",
		"drewbourne.vscode-remark-lint",
		"ymotongpoo.licenser",
		"shardulm94.trailing-spaces"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",
	"postStartCommand": "update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.6 1 && update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.9 2 && pip3 install -U pip wheel setuptools virtualenv && pip3 install --ignore-installed PyYAML && docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d cvat_opa && docker run -p 6379:6379 -d redis",
	"postAttachCommand": "mkdir -p logs keys && virtualenv .env && . .env/bin/activate && pip3 install -r cvat/requirements/development.txt && apt-get install --reinstall python3-apt && python3 manage.py migrate && python3 manage.py collectstatic --no-input && npm i",

	"runArgs": ["-p 3000:3000 -p 7000:7000"],

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "vscode",
	"features": {
		"docker-in-docker": "latest",
		"git": "latest",
		"fish": "latest"
	}
}
